@model SponsorBulmaSitesi.TblPaketler
@{
    Session.Add("Token", "Paketler");
}
<div style="min-height: 1500px; margin-top:70px;">
    <div class="container">
        <div class="text-center">
            <h3>TAKİPÇİ TALEBİ( <i style="color:red">@Model.PaketAdi </i> )</h3>
            <label><b>Aşağıdaki formu doldurarak talebinizi gönderiniz. Sizinle iletişime geçilerek sponsorluk anlaşması tamamlanacaktır. </b></label>
        </div>

        <div class="row col-md-5 card mb-5 mb-lg-0" style="margin:auto">
            <b style="color:red"> @ViewBag.Uyari</b>
            <b style="color:forestgreen"> @ViewBag.Bilgi</b>
            <form action="/Uye/TalepOlustur" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="paket" value="@Model.PaketSeoUrl" />
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>Adınız </b><i style="color:red">*</i></label>
                    <input type="text" class="form-control" name="isim" placeholder="Adınız" required id="recipient-name">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>Sayfa Kullanıcı Adı (Doğru olduğundan emin olunuz)</b><i style="color:red">*</i></label>
                    <input type="text" class="form-control" name="instaadi" placeholder="Sayfa Kullanıcı Adı" required id="recipient-name">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>Sayfa Profil Linki (Profilden emin olmak için)</b><i style="color:red"></i></label>
                    <input type="text" class="form-control" name="profillink" placeholder="Profil Linki" id="recipient-name">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>Telefon Numarası (İletişime Geçilecek)</b><i style="color:red">*</i></label>
                    <input type="tel" maxlength="11" name="telefon" class="form-control" placeholder="Telefon" required id="recipient-name">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>E Mail Adresi (İşlem Bilgileri Gönderilecek)</b><i style="color:red">*</i></label>
                    <input type="email" name="mail" class="form-control" placeholder="E-Mail" required id="recipient-name">
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label"><b>Açıklama</b></label>
                    <textarea class="form-control" name="aciklama" placeholder="Daha önce sitemiz haricinde sponsor olduğunuz instagram sayfası varsa yazınız." id="message-text"></textarea>
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>Kampanya ve çekiliş duruyularından yaralanmak için whatsApp grubuna girmek ister misin?</b></label><br />
                    <input type="radio" checked id="male" name="whatsapp" value="Evet">
                    <label for="male">Evet</label><br>
                    <input type="radio" id="female" name="whatsapp" value="Hayır">
                    <label for="female">Hayır</label><br>
                </div>

                <div class="text-center">
                    <input type="submit" class="btn btn-success" value="TALEP GÖNDER">
                </div>
            </form>
        </div>
    </div>
</div>


