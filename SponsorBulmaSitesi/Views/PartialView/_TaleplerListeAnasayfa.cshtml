@model IEnumerable<SponsorBulmaSitesi.TblTalepler>



<body style="background-color:#f1f1f1">

    <div class="container" style="margin-top:10px">
        <h4 style="color:red">Ödemesi Yapılmayan Talepler</h4>
        <table class="table table-responsive table-hover yaziboyutu">
            <tr>
                <th>
                    İŞLEM KODU
                </th>
                <th>
                    SAYFA ADI
                </th>
                <th>
                    SAYFA LİNKİ
                </th>
                <th>
                    PAKET ADI
                </th>
                <th>
                    TARİH
                </th>
                <th>
                    ÖDEME DURUMU
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {

            <tr>
                @if (item.TalepOdeme == "Ödenmedi")
                {
                    <td>
                        @item.TalepKodu
                    </td>
                    <td>
                        @item.SayfaAdi
                    </td>
                    <td>
                        @item.ProfilLink
                    </td>
                    <td>
                        @item.TblPaketler.PaketAdi
                    </td>
                    <td>
                        @item.TalepTarih
                    </td>
                    <td>
                        @item.TalepOdeme
                    </td>
                    <td>
                        <a href="/Admin/MusteriTalep/@item.Id">Talebi Görüntüle</a>
                    </td>
                }
            </tr>

            }
        </table>
        <hr />
        <h4 style="color:red">Ödemesi Yapılan Talepler</h4>
        <table class="table table-responsive table-hover yaziboyutu">
            <tr>
                <th>
                    İŞLEM KODU
                </th>
                <th>
                    SAYFA ADI
                </th>
                <th>
                    PAKET ADI
                </th>
                <th>
                    TARİH
                </th>
                <th>
                    ÖDEME DURUMU
                </th>
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    @if (item.TalepOdeme == "Ödendi")
                    {
                        <td>
                            @item.TalepKodu
                        </td>
                        <td>
                            @item.SayfaAdi
                        </td>
                        <td>
                            @item.TblPaketler.PaketAdi
                        </td>
                        <td>
                            @item.TalepTarih
                        </td>
                        <td>
                            @item.TalepOdeme
                        </td>
                        <td>
                            <a href="/Admin/MusteriTalep/@item.Id">Talebi Görüntüle</a>
                        </td>
                    }


                </tr>

            }
        </table>
    </div>
</body>


