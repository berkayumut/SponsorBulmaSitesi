@model IEnumerable<SponsorBulmaSitesi.TblYorumlar>

@{
    ViewBag.Title = "Yorumlar";
}



<div class="container" style="margin-top:10px;">
    <h2>Yorumlar</h2>
    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.YorumAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yorum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YorumMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YorumOnay)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.YorumAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yorum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YorumMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YorumOnay)
                </td>
                <td>
                    @if (item.YorumOnay == "PASİF")
                    {
                        @Html.ActionLink("Onayla", "YorumOnayla", new { id = item.Id })
                    }
                    else
                    {
                        @Html.ActionLink("Pasif Yap", "YorumOnayla", new { id = item.Id }) 
                    }
                    @Html.ActionLink("Sil", "YorumSil", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

