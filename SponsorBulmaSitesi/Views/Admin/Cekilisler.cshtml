@model IEnumerable<SponsorBulmaSitesi.TblCekilisler>
@{
    ViewBag.Title = "Cekilisler";
}
<link href="~/Content/Css/_UyeIslemTablocss.css" rel="stylesheet" />

<body>
    
    <div>
        <div class="container" style="margin-top:10px">
            <p>
                @Html.ActionLink("Yeni Çekiliş Ekle", "CekilisEkle")
            </p>
            <h3>ÇEKİLİŞLER</h3>
            <table class="table table-responsive">
                <tr>
                    <th>
                        ÇEKİLİŞ LİNKİ
                    </th>
                    <th>
                        BAŞLAMA TARİHİ
                    </th>
                    <th>
                        BİTİŞ TARİHİ
                    </th>
                    <th>
                        DURUM
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <a href="@item.CekilisLinki" style="color:red">@item.CekilisLinki</a> 
                        </td>
                        <td>
                            @item.CekilisTarihi
                        </td>
                        <td>
                            @item.CekilisBitisTarihi
                        </td>
                        <td>
                            @item.CekilisDurumu
                        </td>
                        <td>
                            @Html.ActionLink("Güncelle", "CekilisDuzenle", new { id = item.Id }) |
                            @Html.ActionLink("Sil", "CekilisSil", new { id = item.Id }) |
                        </td>

                    </tr>

                }
            </table>
        </div>
    </div>
</body>

