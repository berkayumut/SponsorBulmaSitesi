@model SponsorBulmaSitesi.TblCekilisler

@{
    ViewBag.Title = "CekilisDuzenle";
}

<body>
    
    <div class="container" style="margin-top:10px">

        <form action="/Admin/CekilisDuzenle" method="post">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>TblCekilisler</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label class="control-label col-md-2">Çekiliş Linki</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CekilisLinki, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CekilisLinki, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Toplam Ödül</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="toplamOdul" value="@Model.ToplamOdul" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Durumu</label>
                    <div class="col-md-10">
                        <select class="form-control" name="CekilisDurumu">
                            <option selected value="Aktif">Aktif</option>
                            <option value="Pasif">Pasif</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Çekiliş Tarihi</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CekilisTarihi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CekilisTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Bitiş Tarihi</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CekilisBitisTarihi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CekilisBitisTarihi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </form>
        <div>
            @Html.ActionLink("Geri Dön", "../admin/cekilisler")
        </div>

    </div>
</body>
