
@model IEnumerable<SponsorBulmaSitesi.TblSatilanPaketler>


<link href="~/Content/Css/_UyeIslemTablocss.css" rel="stylesheet" />
<body style="background-color:#f1f1f1">

    <div class="container" style="margin-top:100px">
        <h2 class="text-center">Kayıtlı Kullanıcı Talepleri</h2>
        <h4 style="color:red">Ödemesi Yapılmayan Talepler</h4>
        <table class="table table-responsive table-hover yaziboyutu">
            <tr>
                <th>
                    İŞLEM KODU
                </th>
                <th>
                    SAYFA ADI
                </th>
                <th>
                    PAKET ADI
                </th>
                <th>
                    TARİH
                </th>
                <th>
                    ÖDEME DURUMU
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    @if (item.OdemeDurumu == "Ödenmedi")
                    {
                        <td>
                            @item.SatisKodu
                        </td>
                        <td>
                            @item.TblSayfalar.SayfaAdi
                        </td>
                        <td>
                            @item.TblPaketler.PaketAdi
                        </td>
                        <td>
                            @item.Tarih
                        </td>
                        <td>
                            @item.OdemeDurumu
                        </td>
                        <td>
                            <a href="/Admin/UyeTalep/@item.Id">Talebi Görüntüle</a>
                        </td>
                    }
                </tr>

            }
        </table>
        <hr />
        <h4 style="color:red">Ödemesi Yapılan Talepler</h4>
        <table class="table table-responsive table-hover yaziboyutu">
            <tr>
                <th>
                    İŞLEM KODU
                </th>
                <th>
                    SAYFA ADI
                </th>
                <th>
                    PAKET ADI
                </th>
                <th>
                    TARİH
                </th>
                <th>
                    ÖDEME DURUMU
                </th>
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    @if (item.OdemeDurumu == "Ödendi")
                    {
                        <td>
                            @item.SatisKodu
                        </td>
                        <td>
                            @item.TblSayfalar.SayfaAdi
                        </td>
                        <td>
                            @item.TblPaketler.PaketAdi
                        </td>
                        <td>
                            @item.Tarih
                        </td>
                        <td>
                            @item.OdemeDurumu
                        </td>
                        <td>
                            <a href="/Admin/UyeTalep/@item.Id">Talebi Görüntüle</a>
                        </td>
                    }


                </tr>

            }
        </table>
    </div>
</body>


