@model SponsorBulmaSitesi.TblCekilisler

@{
    ViewBag.Title = "CekilisEkle";
}
<body>
    
    <div  class="container" style="margin-top:10px">

        <form action="/Admin/CekilisEkle" method="post">


            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Yeni Çekiliş</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Çekiliş Linki</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CekilisLinki, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CekilisLinki, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Toplam Ödül</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="toplamOdul" value="" />
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-2">Bitiş Tarihi</label>
                    <div class="col-md-10">
                        <input type="datetime-local" class="form-control" name="CekilisBitisTarihi" value="" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Durumu</label>
                    <div class="col-md-10">
                        <select class="form-control" name="CekilisDurumu">
                            <option selected value="Aktif">Aktif</option>
                            <option value="Pasif">Pasif</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ekle" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            @Html.ActionLink("Geri Dön", "../Admin/cekilisler")
        </div>

    </div>
</body>

