
@{
    ViewBag.Title = "PaketEkle";
}
<body>

    <div class="container" style="margin-top:10px">
    <h2>Paket Ekle</h2>
    <form action="/Admin/PaketEkle" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="col-md-2 control-label">Kategori</label>
            <div class="col-md-10">
                @Html.DropDownList("Kategoriler", null, htmlAttributes: new { name = "KategoriId", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Paket Adı </label>
            <div class="col-md-10">
                <input type="text" name="paketAdi" value="" placeholder="Paket Adını Giriniz" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2">Paket Açıklama </label>
            <div class="col-md-10">
                <textarea name="paketAciklama" placeholder="Paket Açıklama Giriniz" class="form-control"></textarea>
            </div>

        </div>
        <div>
            <label class="col-md-2 control-label">Takipçi Sayısı </label>
            <div class="col-md-10">
                <input type="text" name="takipciSayisi" value="" placeholder="Tahmini Takipçi Sayısını Giriniz" class="form-control" />
            </div>
        </div>
        <div>
            <label class="col-md-2 control-label">Fiyatı </label>
            <div class="col-md-10">
                <input type="text" name="fiyati" value="" placeholder="Paket Fiyatı" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2">Teslim Süresi </label>
            <div class="col-md-10">
                <input type="text" name="TeslimSuresi" value="" placeholder="Teslim Süresi" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2">Çekiliş Tarihi </label>
            <div class="col-md-10">
                <input type="datetime-local" class="form-control" name="CekilisTarihi" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2">Kart Ödeme Link </label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="odemelink" value="" />
            </div>
        </div>

        <br />
        <div>
            <input type="submit" class="btn btn-success" name="name" value="Kaydet" />

        </div>
    </form>
</div>
</body>

