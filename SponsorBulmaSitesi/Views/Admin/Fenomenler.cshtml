@model IEnumerable<SponsorBulmaSitesi.TblFenomenler>

@{
    ViewBag.Title = "Fenomenler";
}
<body>

    
    <div class="container" style="margin-top:10px">
        <h3>Fenomenler</h3>
        <p>
            @Html.ActionLink("Yeni Ekle", "FenomenEkle")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FenomenAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TakipciSayisi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TakipciKapasite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Durum)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FenomenAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TakipciSayisi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TakipciKapasite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Durum)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "FenomenGuncelle", new { id = item.Id }) |
                        @Html.ActionLink("Sil", "FenomenSil", new { id = item.Id }) |
                    </td>
                </tr>
            }

        </table>
    </div>
</body>



